<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartapps.muslimprayerhelper"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/logo"
        android:theme="@style/Theme.Sherlock" >
        <activity android:name="com.smartapps.muslimprayerhelper.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartapps.muslimprayerhelper.LegalActivity"
            android:label="@string/title_activity_legal"
            android:parentActivityName="com.smartapps.muslimprayerhelper.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.smartapps.muslimprayerhelper.MainActivity" />
        </activity>
        <activity
            android:name="com.smartapps.muslimprayerhelper.MosqueFinderActivity"
            android:parentActivityName="com.smartapps.muslimprayerhelper.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.smartapps.muslimprayerhelper.MainActivity" />
        </activity>
        <activity
            android:name="com.smartapps.muslimprayerhelper.CalendarActivity"
            android:label="@string/title_activity_calendar"
            android:parentActivityName="com.smartapps.muslimprayerhelper.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.smartapps.muslimprayerhelper.MainActivity" />
        </activity>
    </application>

</manifest>