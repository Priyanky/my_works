<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TableRow>

            <TextView
                android:paddingLeft="20dp"
                android:text="Register Your Car"
                android:textColor="#919191"
                android:textSize="14sp"
                android:textStyle="bold"
                android:width="150dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:paddingLeft="30dp"
                android:text="VIN:"
                android:textColor="#919191"
                android:textSize="12sp"
                android:width="70dp" />

            <EditText
                android:id="@+id/vin"
                android:hint="Vehicle Identification Number"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:width="200dp" />
        </TableRow>

        <TableRow>

            <TextView />

            <Button
                android:id="@+id/bvinr"
                android:layout_width="20dp"
                android:paddingLeft="10dp"
                android:text="Register"
                android:textSize="10sp" />
        </TableRow>

        <TableRow>

            <TextView />

            <TextView
                android:layout_marginTop="35dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="If VIN is not available"
                android:textColor="#919191"
                android:textSize="10sp"
                android:textStyle="bold"
                android:width="100dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:paddingLeft="30dp"
                android:text="Year:"
                android:textColor="#919191"
                android:textSize="12sp"
                android:width="70dp" />

            <EditText
                android:id="@+id/year"
                android:hint="Year(4 digit)"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:width="200dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:paddingLeft="30dp"
                android:text="makeID:"
                android:textColor="#919191"
                android:textSize="12sp"
                android:width="70dp" />

            <EditText
                android:id="@+id/make"
                android:hint="Manufacturer ID"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:width="200dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:paddingLeft="30dp"
                android:text="modelID:"
                android:textColor="#919191"
                android:textSize="12sp"
                android:width="70dp" />

            <EditText
                android:id="@+id/model"
                android:hint="model ID number"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:width="200dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:paddingLeft="30dp"
                android:text="subModelID:"
                android:textColor="#919191"
                android:textSize="12sp"
                android:width="70dp" />

            <EditText
                android:id="@+id/submodel"
                android:hint="Sub Model ID number"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:width="200dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:paddingLeft="30dp"
                android:text="engineID:"
                android:textColor="#919191"
                android:textSize="12sp"
                android:width="70dp" />

            <EditText
                android:id="@+id/engine"
                android:hint="Engine ID number"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:width="200dp" />
        </TableRow>

        <TableRow>

            <TextView />

            <Button
                android:id="@+id/bymmer"
                android:layout_width="20dp"
                android:paddingLeft="10dp"
                android:text="Register"
                android:textSize="10sp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>